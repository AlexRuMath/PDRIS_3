pipeline {
    agent any

    tools {
        nodejs "node"
    }

    stages{
        stage('Cloning'){
            steps {
                git url: "https://github.com/AlexRuMath/PDRIS_3.git",
                    branch: "main"
            }
        }

        stage("Install dependencies"){
            steps {
                sh 'npm install'
            }
        }

        stage("Test"){
            steps {
                sh 'npm test'
            }
        }

        stage("Deploy"){
            steps {
                sh 'sh deploy.sh'
            }
        }
    }
}