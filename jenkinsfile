pipeline {
    agent any

    tools {
        nodejs "node"
    }

    stages{
        stage('Cloning'){
            steps {
                git url: "https://github.com/AlexRuMath/PDRIS_3.git",
                    branch: "main"
            }
        }

        stage("Install dependencies"){
            steps {
                sh 'npm install'
            }
        }

        stage("Test"){
            steps {
                sh 'npm test'
            }
        }

        stage("Build docker"){
            steps {
                sh 'docker build -t alexrumath/app .'
            }
        }

        stage("Run container"){
            steps {
                sh 'docker run -p 3000:3000 alexrumath/app'
            }
        }
    }
}